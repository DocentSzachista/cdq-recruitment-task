apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ name }}
{% if labels %}
  labels:
{% for key, value in labels.items() %}
    {{ key }}: {{ value }}
{% endfor %}
{% endif %}
spec:
  replicas: {{ replicas }}
  selector:
    matchLabels:
{% if labels %}
{% for key, value in labels.items() %}
      {{ key }}: {{ value }}
{% endfor %}
{% else %}
      app: {{ name }}
{% endif %}
  template:
    metadata:
      labels:
{% if labels %}
{% for key, value in labels.items() %}
        {{ key }}: {{ value }}
{% endfor %}
{% else %}
        app: {{ name }}
{% endif %}
    spec:
      containers:
        - name: {{ name }}
          image: {{ image }}:latest
          {% if envs -%}
          env:
          {% for key, value in envs.items() -%}
          - name: {{ key }}
            value: "{{ value }}"
          {% endfor -%}
          {% endif %}
